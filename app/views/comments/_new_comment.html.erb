<div id="form">
   <%= form_for comment, :url => { :action => "create" } do |f| %>
    <p>
      <%= f.text_field :title, placeholder: "Comment Title" %>
      <%= f.text_area :body, placeholder: "Comment Body" %>

      <%= f.hidden_field :store_id, value: @store.id %>
    </p>
    <div class="actions">
      <%= f.submit %>
  </div>
  <% end %>
</div>