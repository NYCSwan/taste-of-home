<h1 class="login-header">Login</h1>


  <%= form_for(:session, url: login_path) do |f| %>
  <% if @errors %>
    <div id="error_explanation">
      <h2><%= pluralize(@errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul>
          <% @errors.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="small-5">
        <%= f.label :username %><br>
        <%= f.text_field :username %>
      </div>
    </div>
    <div class="row">
      <div class="small-5">
        <%= f.label :password %><br>
        <%= f.password_field :password %>
      </div>
    </div>
    <div class="submit">
      <%= f.submit 'Login' %>
    </div>

  <% end %>
