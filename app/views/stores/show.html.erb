
<h1 class="large-12"> <%=@store.name%> <h1>
<div class="medium-12"> <p><%=@store.description%></p></div>
<div class="medium-6"><%=@store.name%></div>



<% if logged_in? %>
  <%= form_for(@store_list) do |f| %>
    <input type="text" name="name" placeholder="Name">

    <input type="hidden" name="store_list[store_id]" value="<%=@store.id%>">

    <div class="actions">
      <%= f.submit "Add this business to your list"%>
    </div>
  <% end %>
<% end %>

