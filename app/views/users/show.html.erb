<h2>Welcome<%= @user.username.capitalize %>!</h2>
  <div class="row">
    <aside id='user-nav'>
    	<ul>
    		<li><%= link_to "Currated Lists", root_path %></li>
    		<li><%= link_to "Forum", root_path %></li>
    	</ul>
    </aside>
  </div>

<div class="small-8 columns"><h3>Curated Lists</h3>
  <% if logged_in? && current_user.id == @user.id %>
    <%=render partial: "lists/list", locals: {list: @list}%>
  <% end %>
</div>

<div class="small-8 columns">
  <h3><%= @user.username.capitalize %>'s Favorite Places:</h3>
    <div class="small-6 columns">
      <ul>
        <%@user.stores.each do |store|%>
          <li><a href="/store/<%=store.id%>"><%=store.name%></a></li>
        <%end%>
      </ul>
    </div>  
</div>