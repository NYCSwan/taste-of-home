<h1 class="name-header"><%=@list.name.titleize%></h1>
  <br>
    <p><%=@list.description%></p>
  <br>
<div class="large">
  <div id="img">
    <img src="<%= asset_path('meal.jpg') %>" height="200px">
  </div>
  <%@list.stores.each do |store| %>
    <div class="curated-list-items">
      <p>
        <a href="/stores/<%=store.yelp_id%>"><%= store.name %></a>
      </p>
    </div>
  <% end %>
</div>


<%if logged_in? && @user == current_user%>
  <form action="/lists/<%=@list.id%>" method="post">
    <%=token_tag%>
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete This List">
  </form>
<%end%>

<br>
  <h5>Created by <%= @list.user.username %></h5>
